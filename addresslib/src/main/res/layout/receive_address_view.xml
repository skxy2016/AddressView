<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/receive_tv_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="配送至:" />

        <ImageView
            android:id="@+id/receive_iv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/receive_tv_send"
            android:src="@mipmap/address" />

        <TextView
            android:id="@+id/receive_tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/receive_iv_address"
            android:singleLine="true"
             android:text="点击设置地址"/>

        <ImageView
            android:id="@+id/receive_iv_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/expand" />
    </RelativeLayout>

</LinearLayout>
